{
  "name": "@rapid-s/requests",
  "version": "0.1.0",
  "description": "Type-safe HTTP client with Zod schema validation",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "install:pkg": "bun install",
    "build": "tsup",
    "build:pkg": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "fetch",
    "http",
    "client",
    "zod",
    "typescript",
    "type-safe",
    "bun"
  ],
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "tsup": "^8.5.1",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@x/logger": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@x/logger": {
      "optional": true
    }
  }
}
