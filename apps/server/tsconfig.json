{
  "compilerOptions": {
    // 基础配置
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM"],
    "types": ["bun"],

    // 类型检查
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,

    // 输出配置
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // JSX 支持
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",

    // 路径解析
    "paths": {
      "@/*": ["./src/*"],
      "@client/*": ["./client/*"]
    },

    // 其他
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src/**/*.ts",
    "client/**/*.ts",
    "*.config.ts",
    "scripts/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "other/**/*"]
}
