# ========== 服务配置 ==========
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# ========== 数据库配置 ==========
# 方式一：使用完整 URL（优先）
# DATABASE_URL=postgresql://postgres:postgres@localhost:5433/rapid_s

# 方式二：分开配置（DATABASE_URL 不存在时使用）
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=rapid_s

# 连接池配置
DATABASE_POOL_MAX=10
DATABASE_POOL_IDLE_TIMEOUT=20
