{
  "name": "@rapid-s/server",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/types.d.ts"
    }
  },
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun && bun run build:types",
    "build:types": "tsup",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "type-check": "tsc --noEmit --skipLibCheck",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:reset": "docker compose down -v --remove-orphans && rm -rf drizzle && docker compose up postgres -d && sleep 2 && bun run db:generate && bun run db:migrate"
  },
  "dependencies": {
    "@rapid-s/config": "^0.1.0",
    "@rapid-s/logger": "^0.1.0",
    "@trpc/client": "^11.8.0",
    "@trpc/server": "^11.8.0",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.11.1",
    "ioredis": "^5.8.2",
    "jose": "^6.1.3",
    "postgres": "^3.4.7",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "jiti": "^2.6.1",
    "tsup": "^8.5.0",
    "typescript-eslint": "^8.50.0"
  }
}
